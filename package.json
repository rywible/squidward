{
  "name": "squidward",
  "private": true,
  "version": "0.1.0",
  "packageManager": "bun@1.2.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "setup": "bun install",
    "setup:squidward": "bun run scripts/setup-squidward.ts",
    "build": "bun run --workspaces --if-present build",
    "test": "bun run --workspaces --if-present test",
    "lint": "bun run --workspaces --if-present lint",
    "dev": "bun run --workspaces --if-present dev",
    "dev:api": "bun run --filter @squidward/api dev",
    "dev:worker": "bun run --filter @squidward/worker start"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0"
  }
}
